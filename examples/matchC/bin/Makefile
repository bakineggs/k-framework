# add java (.java, and .class), and antlr (.g, and .tokens) extensions
# to the list of known file extentions
.SUFFIXES: .java .class .g

# generic 
JC = javac
JVM = java
CLASSPATH = jgoodies-common-1.1.1.jar:jgoodies-looks-2.4.0.jar:.
JFLAGS = -classpath $(CLASSPATH)

# compile a .java file into one or more .class files
.java.class:
	$(JC) $(JFLAGS) $<

MAIN = Viewer


# targets
# default target is all
all: build

# build target
build:
	$(JC) $(JFLAGS) *.java

# run target (depends on build)
run: build
	#$(JVM) -Dos.name=Windows $(JFLAGS) Viewer out.xml &
	$(JVM) $(JFLAGS) Viewer out.xml &

# clean target removes the .class files and the files generated by antlr
clean:
	rm -rf $(CLASSES) *.class *~

